{
  "name": "OncoThreads",
  "version": "0.0.1",
  "author": "Theresa Harbig, Sabrina Nusrat",
  "description": "Visualization of longitudinal cancer genomics data",
  "private": true,
  "dependencies": {
    "axios": "^0.19.0",
    "d3": "^5.12.0",
    "d3-scale-chromatic": "^1.5.0",
    "electron-is-dev": "^1.1.0",
    "electron-builder": "^21.2.0",
    "html2canvas": "^1.0.0-rc.4",
    "jquery": "^3.4.1",
    "lineupjs": "^3.2.2",
    "lineupjsx": "^1.0.7",
    "mobx": "^5.13.0",
    "mobx-react": "^6.1.3",
    "mobx-utils": "^5.4.1",
    "papaparse": "^5.1.0",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-bootstrap": "^0.32.4",
    "react-color": "^2.17.3",
    "react-dom": "^16.9.0",
    "react-fontawesome": "^1.6.1",
    "react-select": "^3.0.5",
    "react-sortable-pane": "^1.1.0",
    "uuid": "^3.3.3"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "build": "npm run react-build && npm run electron-build",
    "electron-start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-publish": "build --publish=always",
    "preelectron-publish": "npm run react-build"
  },
  "homepage": ".",
  "main": "public/electron.js",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "build": {
    "appId": "com.github.hms-dbmi.oncothreads",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "hms-dbmi",
        "repo": "OncoThreads"
      }
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "electron": "^6.0.10",
    "cross-env": "^6.0.0",
    "eslint-config-airbnb": "^18.0.1",
    "jspdf": "^1.5.3",
    "popper.js": "^1.15.0",
    "react-scripts": "^3.1.1",
    "typescript": "^3.5.2",
    "wait-on": "^3.2.0"
  }
}
